@using TransformacaoDigital.MVC.Services.Dtos
@using TransformacaoDigital.MVC.Services.Dtos.EmpresaDtos
@model Paginador<EmpresaDto>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome Fantasia</th>
                <th scope="col">Razão Social</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Email</th>
                <th scope="col">Tipo</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Registros.Any())
            {
                foreach (var c in Model.Registros)
                {
                    <tr class="registro-empresa-estilo">
                        <td class="registro-empresa" data-id-empresa="@c.Id">@c.NomeFantasia</td>
                        <td class="registro-empresa" data-id-empresa="@c.Id">@c.RazaoSocial</td>
                        <td class="registro-empresa" data-id-empresa="@c.Id">@c.CNPJ</td>
                        <td class="registro-empresa" data-id-empresa="@c.Id">@c.Email</td>
                        <td class="registro-empresa" data-id-empresa="@c.Id">@c.TipoEmpresa.Nome</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">Nenhum registro encontrado</td>
                </tr>
            }
        </tbody>
    </table>
</div>